<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeteFoco" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purplePrimary</item>
        <item name="colorPrimaryVariant">@color/pinkPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blueSecundary</item>
        <item name="colorSecondaryVariant">@color/greenSecundary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:dialogTheme">@style/AppTheme.DialogTheme</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q"> false </item>
    </style>
    
    <style name="AppTheme.DialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/purplePrimary</item>
        <item name="android:colorPrimary">@color/purplePrimary</item>
        <item name="android:colorPrimaryDark">@color/grayUnselectedDark</item>
        <item name="android:colorAccent">@color/purplePrimary</item>
    </style>
</resources>