<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_dialog_background"
    android:elevation="5dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/montserratsemibold"
        android:gravity="center"
        android:text="Detalhes"
        android:textColor="@color/purplePrimary"
        android:textSize="25dp" />

    <LinearLayout
        android:id="@+id/layoutDialog_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/dialog_edittext_custom"
        android:clickable="false"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_title" />

        <TextView
            android:id="@+id/editDialog_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:fontFamily="@font/montserratmedium"
            android:gravity="start"
            android:hint="Tarefa"
            android:padding="10dp"
            android:textSize="17dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutDialog_Descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_edittext_custom"
        android:clickable="false"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_description" />

        <TextView
            android:id="@+id/editDialog_Descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:fontFamily="@font/montserratmedium"
            android:gravity="start"
            android:text="Sem descrição"
            android:padding="10dp"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutDialog_Type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/dialog_edittext_custom"
        android:clickable="false"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_call_split_24" />

        <TextView
            android:id="@+id/editDialog_Tipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:fontFamily="@font/montserratmedium"
            android:gravity="start"
            android:hint="@string/tipo"
            android:padding="10dp"
            android:textSize="17dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutDialog_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/dialog_edittext_custom"
        android:clickable="false"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_date_range_24" />

        <TextView
            android:id="@+id/textDialog_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratmedium"
            android:gravity="start"
            android:hint="Data"
            android:padding="10dp"
            android:textSize="17dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnDialog_DeleteTask"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_with_gradient"
        android:fontFamily="@font/montserratmedium"
        android:text="@string/apagar_dialog"
        android:textColor="@color/white"
        android:textSize="15dp" />

</LinearLayout>