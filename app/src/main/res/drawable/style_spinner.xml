<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_focused="true">
            <layer-list>
                <item>
                    <shape android:shape="rectangle">
                        <solid android:color="@color/grayLight"/>
                        <corners android:radius="10dp"/>
                        <stroke android:color="@color/purplePrimary" android:width="1dp"/>
                        <padding android:right="10dp"/>
                    </shape>
                </item>
                <item>
                    <bitmap android:src="@drawable/ic_action_spinner_down"
                        android:gravity="center|end"/>
                </item>
            </layer-list>
    </item>


    <item android:state_enabled="true">
            <layer-list>
                <item>
                    <shape android:shape="rectangle">
                        <solid android:color="@color/grayLight"/>
                        <corners android:radius="10dp"/>
                        <stroke android:color="@color/grayUnselectedDark" android:width="1dp"/>
                        <padding android:right="10dp"/>
                    </shape>
                </item>
                <item>
                    <bitmap android:src="@drawable/ic_action_spinner_up"
                        android:gravity="center|end"/>
                </item>
            </layer-list>
    </item>


</selector>